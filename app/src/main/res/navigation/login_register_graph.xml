<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_register_graph"
    app:startDestination="@id/registerFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.laza.fragments.loginAndRegister.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.laza.fragments.loginAndRegister.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/introductionFragmentSecond"
        android:name="com.example.laza.fragments.loginAndRegister.IntroductionFragmentSecond"
        android:label="IntroductionFragmentSecond"
        tools:layout="@layout/fragment_introduction_second" >
        <action
            android:id="@+id/action_introductionFragmentSecond_to_introductionFragmentOne"
            app:destination="@id/introductionFragmentOne" />
        <action
            android:id="@+id/action_introductionFragmentSecond_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/introductionFragmentOne"
        android:name="com.example.laza.fragments.loginAndRegister.IntroductionFragmentOne"
        android:label="IntroductionFragmentSecond"
        tools:layout="@layout/fragment_introduction_one" >
        <action
            android:id="@+id/action_introductionFragmentOne_to_introductionFragmentSecond"
            app:destination="@id/introductionFragmentSecond" />
        <action
            android:id="@+id/action_introductionFragmentOne_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.laza.fragments.loginAndRegister.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" >
        <action
            android:id="@+id/action_resetPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>